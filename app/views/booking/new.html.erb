<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<style>
/* The Modal (background) */
.members_display {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 10001; /* Sit on top */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}
.form-control {
color : black !important;
}
.btn-primary:hover, .submit:hover, .authform .button:hover, .button-xs:hover{
  background-color: #337ab7 !important;
  border-color: #337ab7 !important;
}
/* Modal Content */
.modal-content-grpmem {
    border-radius: 10px;
    background-color: #fefefe;
    margin: auto;
    padding: 20px;
    border: 1px solid #888;
    width: 40%;
}

/* The Close Button */
.close-modal {
    opacity: 1;
    color: #000000;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close-modal:hover,
.close-modal:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
}
</style>
<script>
$("#openmodal").click(function(){
  modal = $("#myModal")
  modal.style.display = "block";
});
$('.close_mod').click(function() {
  modal.style.display = "none";
});

</script>
<button id="openmodal" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h5 class="modal-title">Please provide the following details before we confirm your booking.</h5>
      </div>
      <div class="modal-body">
        <%= render 'form', patient: @patient %> 
      </div>

    </div>
    
  </div>
</div>
