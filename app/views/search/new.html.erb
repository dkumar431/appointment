
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<div class="backgroud_style">
  <%= form_tag(search_index_path, method: :post, id: "searchform") do %>
    
    <div class="form-group" style="width:200px; display:inline-block;">
      <%= text_field_tag :location,nil,  class: "form-control", placeholder: "Location" %>
    </div>
    <div class="form-group" style="width:300px; display:inline-block;">
      <%= text_field_tag :term, nil, class: "form-control", placeholder: "Search for doctors,clinics" %>
    </div>
      <%= hidden_field_tag :doctor_id %>
    <%#= submit_tag 'Search', class: "btn btn-default" %>
  <% end %>
</div>  
