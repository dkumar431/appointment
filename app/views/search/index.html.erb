<style>
/* The Modal (background) */
.members_display {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 10001; /* Sit on top */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}
.form-control {
color : black !important;
}
.btn-primary:hover, .submit:hover, .authform .button:hover, .button-xs:hover{
  background-color: #337ab7 !important;
  border-color: #337ab7 !important;
}
/* Modal Content */
.modal-content-grpmem {
    border-radius: 10px;
    background-color: #fefefe;
    margin: auto;
    padding: 20px;
    border: 1px solid #888;
    width: 40%;
}

/* The Close Button */
.close-modal {
    opacity: 1;
    color: #000000;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close-modal:hover,
.close-modal:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
}
</style>
<script>
$(document).ready(function(){
    $(".available-slot").on("click",function(){
      var booking_id = $(this).attr("booking-id");
      
      event.preventDefault();
      modal = document.getElementById("myModal");
      modal.style.display = "block";
      modal.style.opacity = 1   ;
      $("#booking_id").val(booking_id);
    });
    $('.close-mod').click(function() {
    
      modal = document.getElementById("myModal");  
      modal.style.display = "none";
            modal.style.opacity = 0   ;
    });
})
</script>

<% if params["clinic"] == "yes" %>
    
    <table border="1" cellpadding="100" class="app-table">
        <thead>
            
            <% @clinic.doctors.each do |doctor| %>
                <th> <%= doctor.name %> </th>
            <% end %>
        <thead>
        
        <tr>
        <% @clinic.doctors.each_with_index do |doctor,i| %>
            <td>
                <% if i==0 %>
                    <span style="font-size:16px;" class="booked-slot" booking_id=1>10:00 AM</span><br>
                <% else %>
                    <a style="font-size:16px;" href = "#" class="available-slot"><u> 10:00 AM </u></a> <br>
                <% end %>
                <% if i==1 %>
                    <span style="font-size:16px;" class="booked-slot">10:30 AM</span><br>
                <% else %>
                    <a style="font-size:16px;" href = "#" class="available-slot" booking-id=123><u> 10:30 AM </u></a> <br>
                <% end %>
                <% if i==3 %>
                    <span style="font-size:16px;" class="booked-slot">11:00 AM</span><br>
                <% else %>
                    <a style="font-size:16px;" href = "#" class="available-slot"><u> 11:00 AM </u></a> <br>
                <% end %>
                
            </td>
        <% end %>
            
            
        </tr>
    </table>
<% else %>
    <table border="1" cellpadding="100" class="app-table">
    <thead>
        <% @doctor.clinics.each do |clinic| %>
            <th> <%= clinic.name %> </th>
        <% end %>
    <thead>

    <tr>
    <% @doctor.clinics.each_with_index do |clinic,i| %>
        <td>
            <% if i==0 %>
                <span style="font-size:16px;" class="booked-slot">10:00 AM</span><br>
            <% else %>
                <a style="font-size:16px;" href = "#" class="available-slot"><u> 10:00 AM </u></a> <br>
            <% end %>
            <% if i==1 %>
                <span style="font-size:16px;" class="booked-slot">10:30 AM</span><br>
            <% else %>
                <a style="font-size:16px;" href = "#" class="available-slot"><u> 10:30 AM </u></a> <br>
            <% end %>
            <% if i==3 %>
                <span style="font-size:16px;" class="booked-slot">11:00 AM</span><br>
            <% else %>
                <a style="font-size:16px;" href = "#" class="available-slot"><u> 11:00 AM </u></a> <br>
            <% end %>
            
        </td>
    <% end %>
        
        
    </tr>
    </table>
<% end %>
</div>

<!-- Modal -->
<div class="members_display fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close-mod close" data-dismiss="modal">&times;</button>
        <h5 class="modal-title">Please provide the following details before we confirm your booking.</h5>
      </div>
      <div class="modal-body">
        <%= render 'form', patient: @patient %> 
      </div>

    </div>
    
  </div>
</div>